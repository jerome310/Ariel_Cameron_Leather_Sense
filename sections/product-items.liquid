<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

<div class="max-w-6xl mx-auto my-10 p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Product Images -->
        <div>
            {% assign main_image = product.featured_image %}
            <img id="mainProductImage" src="{{ main_image | img_url: '1024x1024' }}" alt="{{ product.title }}"
                class="w-full object-cover border rounded-lg mb-4">

            <!-- Desktop Thumbnails -->
            <div class="hidden md:flex gap-2">
                {% for image in product.images %}
                <img src="{{ image | img_url: '200x200' }}" alt="{{ product.title }}"
                    class="w-20 h-20 object-cover border cursor-pointer thumbnail"
                    data-full="{{ image | img_url: '1024x1024' }}">
                {% endfor %}
            </div>

            <!-- Mobile Swiper -->
            <div class="md:hidden">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        {% for image in product.images %}
                        <div class="swiper-slide">
                            <img src="{{ image | img_url: '1024x1024' }}" alt="{{ product.title }}"
                                class="w-full object-cover rounded-lg">
                        </div>
                        {% endfor %}
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
        </div>

        <!-- Product Info -->
        <div>
            <h1 class="text-3xl font-bold mb-4">{{ product.title }}</h1>
            <div class="mb-4">{{ product.description }}</div>
            <p class="text-xl font-semibold mb-4">{{ product.selected_or_first_available_variant.price | money }}</p>

            <!-- Single Form with Quantity -->
            {% form 'product', product %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

            <div class="flex mt-4">
                <div class="relative">
                    <p class="mb-1">Quantity</p>
                    <button type="button" class="absolute top-4 left-0 p-2 text-gray-500 text-3xl"
                        onclick="decrementQuantity()">-</button>
                    <input type="number" id="quantity" name="quantity" value="1" min="1"
                        class="w-32 px-5 py-2 border rounded-md text-center border-black bg-[#FEF0D4]">
                    <button type="button" class="absolute top-4 right-0 p-2 text-gray-500 text-3xl"
                        onclick="incrementQuantity()">+</button>
                </div>
            </div>

            <div class="mt-6">
                {% render 'add-to-cart-button' %}
            </div>

            <!-- Shop Pay -->
            <div class="mt-4">
                {{ form | payment_terms }}
            </div>
            {% endform %}
        </div>
    </div>
</div>

<script>
    // Quantity controls
    function incrementQuantity() {
        const qtyInput = document.getElementById("quantity");
        qtyInput.value = parseInt(qtyInput.value) + 1;
    }

    function decrementQuantity() {
        const qtyInput = document.getElementById("quantity");
        if (parseInt(qtyInput.value) > 1) qtyInput.value = parseInt(qtyInput.value) - 1;
    }

    // Desktop thumbnail click -> update main image
    document.querySelectorAll(".thumbnail").forEach(img => {
        img.addEventListener("click", function () {
            const mainImage = document.getElementById("mainProductImage");
            mainImage.src = this.dataset.full;
        });
    });

    // Swiper init for mobile
    document.addEventListener("DOMContentLoaded", function () {
        new Swiper(".mySwiper", {
            loop: true,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    });
</script>