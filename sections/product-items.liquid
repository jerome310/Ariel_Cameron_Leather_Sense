<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

<style>
    .swiper-button-prev,
    .swiper-button-next {
        color: black;
        top: auto !important;
        height: 20px;
    }

    .swiper-button-prev::after,
    .swiper-button-next::after {
        font-size: 20px;
    }

    .swiper-pagination {
        color: black;
        bottom: 0 !important;
    }

    .swiper-pagination-bullet-active {
        background: black !important;
    }
</style>

<div class="max-w-6xl mx-auto my-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        <div class="product--medias">
            <div class="hidden md:block">
                <div class="h-100 overflow-hidden p-2">
                    {% comment %} PRODUCT IMAGES {% endcomment %}
                    <!-- Assuming you're in the product.liquid template -->
                    <div class="product-images">
                        <!-- Display the first product image -->
                        <img class="w-full h-[400px] md:h-full object-cover bg-gray-100 rounded-2xl transition-opacity duration-300 group-hover:opacity-0" src="{{ product.featured_image.src | img_url }}" alt="{{ product.title }}">

                        <!-- Loop through additional images -->
                        <div class="mt-4 flex">
                            {% for image in product.images %}
                            <img src="{{ image.src | img_url }}" alt="{{ product.title }}" class="mx-3 w-[250px] object-cover bg-gray-100 rounded-2xl transition-opacity duration-300 group-hover:opacity-0 cursor-pointer">
                            {% endfor %}
                        </div>
                    </div>
                    {% comment %} PRODUCT IMAGES {% endcomment %}
                </div>
            </div>

            <div class="md:hidden">
                <div class="swiper h-94">
                    <div class="swiper-wrapper">
                        {% for media in product.media %}
                        <div class="swiper-slide">
                            <div class="h-80 overflow-hidden p-2">
                                {% comment %} PRODUCT IMAGES {% endcomment %}
                                <div class="product-images">
                                    <!-- Display the first product image -->
                                    <img src="{{ product.featured_image.src | img_url }}" alt="{{ product.title }}">
                                
                                    <!-- Loop through additional images -->
                                    {% for image in product.images offset:1 %}
                                    <img class="w-full h-full" src="{{ image.src | img_url }}" alt="{{ product.title }}">
                                    {% endfor %}
                                </div>
                                {% comment %} PRODUCT IMAGES {% endcomment %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <div class="swiper-pagination"></div>

                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
        </div>

        <div class="product--information">

        </div>
    </div>
</div>


<script>
    const swiper = new Swiper('.swiper', {
        direction: 'horizontal',

        pagination: {
            el: '.swiper-pagination'
        },

        navigation: {
            prevEl: '.swiper-button-prev',
            nextEl: '.swiper-button-next'
        }
    })

    
</script>

{% render 'multi-product-selector' %}