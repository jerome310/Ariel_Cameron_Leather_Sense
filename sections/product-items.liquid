/* Input Default Arrow Disppearing */
input[type="number"]{
    outline: none;
    -moz-appearance: textfield;
}
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button{
    -webkit-appearance: none;
    margin: 0;
}

.belt-container {
    margin-top: 20px;
}

.belt-container h1 {
    font-size: 30px;
    padding-top: 10px;
    padding-bottom: 20px;
}

.par-five {
    width: 30%;
}

.par,.par-two,.par-three,.par-four,.par-five {
    margin: 0px 10px 24px 0;
    border: 2px solid black;
    transition: 0.5s ease;
    cursor: pointer;
    padding: 12px 0;
}

.par:hover,.par-two:hover,.par-three:hover,.par-four:hover,.par-five:hover {
    background-color: black;
    color: white;
}


</style>

