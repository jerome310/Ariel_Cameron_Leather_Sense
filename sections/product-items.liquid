<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

<div class="max-w-6xl mx-auto my-10 p-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <!-- Product Images -->
        <div>
            {% if product.images.size > 0 %}
            <div class="swiper mySwiper">
                <div class="swiper-wrapper">
                    {% for image in product.images %}
                    <div class="swiper-slide">
                        <img src="{{ image | img_url: '1024x1024' }}" alt="{{ product.title | escape }}"
                            class="w-full object-cover border">
                    </div>
                    {% endfor %}
                </div>
                <!-- Add navigation buttons -->
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
            {% else %}
            {{ 'product-1' | placeholder_svg_tag: 'w-full object-cover border' }}
            {% endif %}
        </div>

        <!-- Product Info -->
        <div>
            <h1 class="text-3xl font-bold mb-4">{{ product.title }}</h1>
            <div class="mb-4">{{ product.description }}</div>

            <!-- Price -->
            <p class="text-xl font-semibold mb-4">
                {{ product.selected_or_first_available_variant.price | money }}
            </p>

            {% if product.collections contains collections['belt-bag'] %}
            <!-- Special belt collection form -->
            {% form 'product', product %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <div class="flex">
                <div class="relative">
                    <p class="mb-1">Quantity</p>
                    <button type="button" class="absolute top-4 left-0 p-2 text-gray-500 text-3xl"
                        onclick="decrementQuantity()">-</button>
                    <input type="number" id="quantity" name="quantity" value="1" min="1"
                        class="w-32 px-5 py-2 border rounded-md text-center border-black bg-[#FEF0D4]">
                    <button type="button" class="absolute top-4 right-0 p-2 text-gray-500 text-3xl"
                        onclick="incrementQuantity()">+</button>
                </div>
            </div>
            <div class="mt-6">
                {% render 'add-to-cart-button' %}
            </div>
            {% endform %}
            {% else %}
            <!-- General product form -->
            {% form 'product', product %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <div class="flex">
                <div class="relative bg-red">
                    <p>Quantity</p>
                    <button type="button" class="absolute top-4 left-0 p-2 text-gray-500 text-3xl"
                        onclick="decrementQuantity()">-</button>
                    <input type="number" id="quantity" name="quantity" value="1" min="1"
                        class="w-32 px-5 py-2 border rounded-md text-center border-black bg-[#FEF0D4]">
                    <button type="button" class="absolute top-4 right-0 p-2 text-gray-500 text-3xl"
                        onclick="incrementQuantity()">+</button>
                </div>
            </div>
            {% render 'add-to-cart-button' %}
            {% endform %}
            {% endif %}

            <!-- Shop Pay Installments -->
            <div class="mt-4">
                {{ form | payment_terms }}
            </div>
        </div>
    </div>
</div>

<!-- Quantity Controls -->
<script>
    function incrementQuantity() {
        const qtyInput = document.getElementById("quantity");
        qtyInput.value = parseInt(qtyInput.value) + 1;
    }

    function decrementQuantity() {
        const qtyInput = document.getElementById("quantity");
        if (parseInt(qtyInput.value) > 1) {
            qtyInput.value = parseInt(qtyInput.value) - 1;
        }
    }

    // Swiper init
    document.addEventListener("DOMContentLoaded", function () {
        new Swiper(".mySwiper", {
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
        });
    });
</script>