<!-- Header Carousel -->
<div class="relative w-full overflow-hidden" x-data="{ current: 0, slides: 3 }"
    x-init="setInterval(() => { current = (current < slides - 1 ? current + 1 : 0) }, 5000)">

    <!-- Slides container -->
    <div class="relative h-[500px] md:h-[700px] flex items-center justify-center">

        <!-- Slide 1 -->
        <div x-show="current === 0" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">

            <!-- Gradient background -->
            <div class="absolute inset-0 bg-gradient-to-r from-[#feb82b] via-[#2387ff] to-[#e561a1] z-0"></div>

            <!-- Image layer (now top-centered) -->
            <img src="{{ 'ARIEL11.jpg' | asset_url }}" class="object-cover w-full h-full relative z-0" alt="Slide 1">

            <!-- Optional gradient for readability -->
            <div class="absolute inset-x-0 bottom-0 h-48 bg-gradient-to-t from-black/20 to-transparent z-10"></div>

            <!-- Centered text & button -->
            <div
                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-20 flex flex-col items-center space-y-4">
                <h2 class="text-white text-2xl md:text-4xl font-bold text-center drop-shadow-[0_0_8px_black]">
                    Handcrafted & Hand-Stitched (no sewing machine!)
                </h2>
                <a href="https://arielcameronleather.com/collections/crossbody-collection"
                    class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 shadow-lg hover:scale-105 transition-transform duration-300">
                    Shop Now
                </a>
            </div>
        </div>


        <!-- Slide 2 -->
        <div x-show="current === 1" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">

            <div class="absolute inset-0 bg-gradient-to-r from-[#feb82b] via-[#2387ff] to-[#e561a1] z-0"></div>
            <img src="{{ 'ariel_denim.jpg' | asset_url }}" class="object-cover w-full h-full relative z-0"
                alt="Slide 2">

            <div class="absolute inset-x-0 bottom-0 h-48 bg-gradient-to-t from-black/20 to-transparent z-10"></div>

            <!-- Centered text & button -->
            <div
                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-20 flex flex-col items-center space-y-4">
                <h2 class="text-white text-2xl md:text-4xl font-bold text-center drop-shadow-[0_0_8px_black]">
                    You had me at Polka Dots!
                </h2>
                <a href="https://arielcameronleather.com/collections/crossbody-collection"
                    class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 shadow-lg hover:scale-105 transition-transform duration-300">
                    Shop Now
                </a>
            </div>
        </div>

        <!-- Slide 3 -->
        <div x-show="current === 2" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">

            <!-- Gradient background -->
            <div class="absolute inset-0 bg-gradient-to-r from-[#feb82b] via-[#2387ff] to-[#e561a1] z-0"></div>

            <!-- Image layer -->
            <img src="{{ 'ARIEL15.jpg' | asset_url }}" class="relative z-0 object-cover object-center w-full h-full"
                alt="Slide 3">

            <div class="absolute inset-x-0 bottom-0 h-48 bg-gradient-to-t from-black/20 to-transparent z-10"></div>

            <!-- Centered text & button -->
            <div
                class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-20 flex flex-col items-center space-y-4">
                <h2 class="text-white text-2xl md:text-4xl font-bold text-center drop-shadow-[0_0_8px_black]">
                    One of One Original Designs!
                </h2>
                <a href="https://arielcameronleather.com/collections/crossbody-collection"
                    class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 shadow-lg hover:scale-105 transition-transform duration-300">
                    Shop Now
                </a>
            </div>
        </div>

    </div>

    <!-- Navigation Arrows -->
    <button @click="current = (current > 0 ? current - 1 : slides - 1)"
        class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full hover:bg-opacity-70 z-30">
        &#10094;
    </button>
    <button @click="current = (current < slides - 1 ? current + 1 : 0)"
        class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full hover:bg-opacity-70 z-30">
        &#10095;
    </button>

    <!-- Dots -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2 z-30">
        <button @click="current = 0" :class="current === 0 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
        <button @click="current = 1" :class="current === 1 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
        <button @click="current = 2" :class="current === 2 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
    </div>

</div>