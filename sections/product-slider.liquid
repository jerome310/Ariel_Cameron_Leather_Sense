<!-- Header Carousel -->
<div class="relative w-full overflow-hidden" x-data="{ current: 0, slides: 3 }"
    x-init="setInterval(() => { current = (current < slides - 1 ? current + 1 : 0) }, 5000)">

    <!-- Slides -->
    <div class="relative h-[500px] md:h-[700px] bg-black flex items-center justify-center">
        <!-- Slide 1 -->
        <div x-show="current === 0" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">
            <img src="{{ 'crossbody-1.jpg' | asset_url }}" class="object-contain max-h-full w-full" alt="Slide 1">
            <div class="absolute inset-0 bg-black bg-opacity-30 flex flex-col items-center justify-center space-y-4">
                <h2 class="text-white text-3xl md:text-5xl font-bold text-center pb-0 md:pb-4 md:px-[25rem]">
                    Mini Mini (Small) Polka Dot Crossbody bag
                </h2>
                <a href="/collections/crossbody-collection/products/mini-mini-small-polka-dot-crossbody-bag" class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200">
                    Shop Now
                </a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div x-show="current === 1" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">
            <img src="{{ 'crossbody-2.jpg' | asset_url }}" class="object-contain max-h-full w-full" alt="Slide 2">
            <div class="absolute inset-0 bg-black bg-opacity-30 flex flex-col items-center justify-center space-y-4">
                <h2 class="text-white text-3xl md:text-5xl font-bold text-center pb-0 md:pb-4 md:px-[25rem]">
                    Polka Dot Medium Crossbody bag!
                </h2>
                <a href="/collections/crossbody-collection/products/polka-dot-medium-crossbody-bag" class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200">
                    Shop Now
                </a>
            </div>
        </div>

        <!-- Slide 3 -->
        <div x-show="current === 2" x-transition:enter="transition duration-700 ease-out"
            x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
            x-transition:leave="transition duration-700 ease-in" x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0" class="absolute inset-0 flex items-center justify-center">
            <img src="{{ 'crossbody-3.jpg' | asset_url }}" class="object-contain max-h-full w-full" alt="Slide 3">
            <div class="absolute inset-0 bg-black bg-opacity-30 flex flex-col items-center justify-center space-y-4">
                <h2 class="text-white text-3xl md:text-5xl font-bold text-center pb-0 md:pb-4 md:px-[25rem]">
                    Polka Dot Large Crossbody bag!
                </h2>
                <a href="/collections/crossbody-collection/products/polka-dot-large-crossbody-bag" class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200">
                    Shop Now
                </a>
            </div>
        </div>
    </div>

    <!-- Navigation Arrows -->
    <button @click="current = (current > 0 ? current - 1 : slides - 1)"
        class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full hover:bg-opacity-70">
        &#10094;
    </button>
    <button @click="current = (current < slides - 1 ? current + 1 : 0)"
        class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-3 rounded-full hover:bg-opacity-70">
        &#10095;
    </button>

    <!-- Dots -->
    <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
        <button @click="current = 0" :class="current === 0 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
        <button @click="current = 1" :class="current === 1 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
        <button @click="current = 2" :class="current === 2 ? 'bg-white' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"></button>
    </div>
</div>