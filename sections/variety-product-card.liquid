<div class="flex flex-col md:flex-row md:justify-center mb-20">
    <div class="flex flex-col mr-5">

        <a href="{{ 'products/cameron' | url }}">
            <div class="relative group mb-5">
                <div class="hover:underline underline-offset-2 decoration-white w-full h-80 relative">
                    <img src="{{ all_products['cameron'].featured_image.src | img_url }}" alt="Cameron Product Image"
                        class="w-full h-full object-cover bg-gray-100 rounded-t-2xl transition-opacity duration-300 group-hover:opacity-0">
        
                    {% assign images = all_products['cameron'].images %}
                    {% if images.size > 1 %}
                    <img src="{{ images[1].src | img_url }}" alt="Cameron Alternate Image"
                        class="w-full h-full object-cover bg-gray-100 rounded-t-2xl absolute top-0 left-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                    {% endif %}
        
                    <div class="text-white hover:underline underline-offset-2 decoration-white text-center py-6 px-6">
                        <p class="text-xl">{{ all_products['cameron'].title }}</p>
                        </div>
                    </div>
                    <div class="text-center bg-red-900 py-10 pt-14 px-10 rounded-b-2xl text-white">
                    <p class="text-lg">{{ all_products['cameron'].price | money }}</p>
                </div>
            </div>
        </a>



