<div class="flex flex-col md:flex-row md:justify-center mb-32">
    <div class="w-11/12 mx-auto flex flex-col md:mx-0 md:w-1/4 md:mr-5">
        {% comment %} 1ST CARD {% endcomment %}
        <div class="relative group mb-5">
            <div class="hover:underline underline-offset-2 decoration-white w-full h-80 relative">
                <img src="{{ all_products['cameron'].featured_image.src | img_url: 'large' }}"
                    alt="Cameron Product Image"
                    class="w-full h-[400px] md:h-full object-cover bg-gray-100 rounded-t-2xl transition-opacity duration-300 group-hover:opacity-0">

                {% assign images = all_products['cameron'].images %}
                {% if images.size > 1 %}
                <img src="{{ images[1].src | img_url: 'large' }}" alt="Cameron Alternate Image"
                    class="w-full h-[400px] md:h-full object-cover bg-gray-100 rounded-t-2xl absolute top-0 left-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                {% endif %}

                <div
                    class="text-black hover:underline underline-offset-2 decoration-white text-center py-6 px-6 mt-1 md:mt-0">
                    <p class="text-xl">{{ all_products['cameron'].title }}</p>
                </div>
            </div>
            <div style="background-color: #ffffff75"
                class="text-center pt-16 pb-10 px-10 rounded-b-2xl text-black mt-20 md:mt-0">
                <p class="text-lg mb-4">{{ all_products['cameron'].price | money }}</p>
                <button id="slideButton" class="addProduct py-2 border-solid border-2 border-black px-4 rounded-full">Add to
                    cart</button>
                {% render 'confetti-button' %}
            </div>
        </div>


        {% comment %} 2ND CARD {% endcomment %}
            <div class="relative group mt-5">
                <div class="hover:underline underline-offset-2 decoration-white w-full h-80 relative">
                    <img src="{{ all_products['diana'].featured_image.src | img_url: 'large' }}" alt="Cameron Product Image"
                        class="w-full h-[400px] md:h-full object-cover bg-gray-100 rounded-t-2xl transition-opacity duration-300 group-hover:opacity-0">

                    {% assign images = all_products['diana'].images %}
                    {% if images.size > 1 %}
                    <img src="{{ images[1].src | img_url: 'large' }}" alt="Diana Alternate Image"
                        class="w-full h-[400px] md:h-full object-cover bg-gray-100 rounded-t-2xl absolute top-0 left-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                    {% endif %}

                    <div
                        class="text-black hover:underline underline-offset-2 decoration-white text-center py-6 px-6 mt-1 md:mt-0">
                        <p class="text-xl">{{ all_products['diana'].title }}</p>
                    </div>
                </div>
                <div style="background-color: #ffffff75"
                class="text-center pt-16 pb-10 px-10 rounded-b-2xl text-black mt-20 md:mt-0">
                    <p class="text-lg mb-4">{{ all_products['diana'].price | money }}</p>
                    {% comment %} <button id="slideButton" class="addProduct py-2 border-solid border-2 border-black px-4 rounded-full">Add to
                        cart</button>
                    {% render 'confetti-button' %}  {% endcomment %}
                </div>
            </div>
    </div>


    {% comment %} 3RD CARD {% endcomment %}
    {% comment %} <a href="{{ 'products/rae' | url }}">
        <div class="relative group w-11/12 mx-auto md:w-full mt-10 md:mt-0 md:ml-5">
            <div class="hover:underline underline-offset-2 decoration-white w-full h-full relative">
                <img src="{{ all_products['rae'].featured_image.src | img_url }}" alt="Rae Product Image"
                    class="w-full h-[553px] md:w-full md:h-[800px] object-cover bg-gray-100 rounded-t-2xl transition-opacity duration-300 group-hover:opacity-0">

                {% assign images = all_products['rae'].images %}
                {% if images.size > 1 %}
                <img src="{{ images[1].src | img_url }}" alt="Rae Alternate Image"
                    class="w-full h-[553px] md:w-full md:h-[800px] object-cover bg-gray-100 rounded-t-2xl absolute top-0 left-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                {% endif %}

                <div
                    class="text-black bg-red-900 hover:underline underline-offset-2 decoration-white text-center pt-9 px-6">
                    <div>
                        <p class="text-xl">{{ all_products['rae'].title }}</p>
                    </div>
                </div>
            </div>
            <div class="text-center bg-red-900 py-2 pb-7 px-10 rounded-b-2xl text-black">
                <p class="text-lg">{{ all_products['rae'].price | money }}</p>
                <!-- Additional content if needed -->
            </div>
        </div>
    </a> {% endcomment %}
</div>

