{% comment %} <style>
    /* Hide Alpine elements until initialized to prevent flash */
    [x-cloak] {
        display: none !important;
    }
</style>

<!-- Top Banner -->
<div class="py-4 px-10 md:px-0 bg-gradient-to-r from-[#feb82b]/50 via-[#e561a1]/50 to-[#feb82b]/50 z-10 relative">
    <p class="text-center" aria-label="Welcome message">&#128075;Handcrafted, Hand-Stitched Leather Goods, designed &
        made by Ariel! &#128512;</p>
</div>

<!-- Navbar + Hero Section -->
<div class="relative w-full" x-data="{
        open: false,
        searchBarButtonOpen: false,
        searchBarButtonOpenMobile: false,
        init() {
            window.addEventListener('resize', () => {
                // Close slider if screen is desktop or bigger
                if(window.innerWidth >= 768) this.open = false;
            });
        }
    }" x-init="init()">

    <!-- Navbar Mobile -->
    <div class="grid grid-cols-3 items-center px-4 py-3 md:hidden absolute top-0 left-0 w-full z-20">
        <!-- Hamburger -->
        <div class="flex items-center">
            <button class="text-white focus:outline-none" x-on:click="open = !open" :aria-expanded="open.toString()">
                <svg class="h-6 w-6" x-show="!open" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                    aria-label="Open menu">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg class="h-6 w-6" x-show="open" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                    aria-label="Close menu">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Mobile Logo -->
        <div class="flex justify-center">
            <a href="{{ shop.url }}" title="Homepage">
                {% if section.settings.image == blank %}
                <img class="w-[120px] h-[120px]" src="{{ 'logo.png' | asset_url }}" alt="My company logo">
                {% else %}
                <img class="w-[120px] h-[120px]" src="{{ section.settings.image | img_url: 'master' }}"
                    alt="My company logo">
                {% endif %}
            </a>
        </div>

        <!-- Search + Cart -->
        <div class="flex justify-end items-center space-x-4 text-white">
            <button
                x-on:click="searchBarButtonOpenMobile = true; $nextTick(() => { document.body.style.overflow = 'hidden'; })"
                type="button" class="whitespace-nowrap text-base hover:text-gray-200"
                aria-label="Open mobile search bar">
                {% render 'icon-search' %}
            </button>
            <a href="{{ routes.cart_url }}" class="cart-link relative">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="white" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
                {% if cart.item_count > 0 %}
                <p
                    class="absolute bottom-1.5 left-1 mt-2 ml-2 font-bold bg-red-900 text-white rounded-2xl px-2 py-0.5 text-xs">
                    {{ cart.item_count }}</p>
                {% endif %}
            </a>
        </div>
    </div>

    <!-- Mobile Slider Menu -->
    <div x-show="open" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="transform -translate-x-full opacity-0"
        x-transition:enter-end="transform translate-x-0 opacity-100"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="transform translate-x-0 opacity-100"
        x-transition:leave-end="transform -translate-x-full opacity-0" class="fixed inset-0 z-50 flex" x-cloak>
        <div class="relative bg-[#FFF1D5] w-3/4 h-full p-6 flex flex-col space-y-4 overflow-y-auto shadow-lg">
            <!-- Close Button Top Left -->
            <button x-on:click="open = false" class="absolute top-4 left-4 text-[#2E2D34] font-bold text-xl z-50">
                âœ–
            </button>

            <!-- Menu Links -->
            {% if linklists.main-menu.links.size > 0 %}
            {% for link in linklists.main-menu.links %}
            <a href="{{ link.url }}" title="{{ link.title }}"
                class="block text-[#2E2D34] font-medium py-3 px-2 hover:bg-[#FDE9C8] rounded transition-colors duration-200">
                {{ link.title }}
            </a>
            {% endfor %}
            {% else %}
            <p class="text-[#2E2D34]">No menu links available.</p>
            {% endif %}

            <!-- Social Media -->
            <div class="flex space-x-4 mt-6">
                {% render 'social-media-twitter' %}
                {% render 'social-media-facebook' %}
                {% render 'social-media-pinterest' %}
                {% render 'social-media-instagram' %}
                {% render 'social-media-tiktok' %}
            </div>
        </div>

        <!-- Click outside to close -->
        <div class="flex-1" x-on:click="open = false"></div>
    </div>

    <!-- Desktop Navbar -->
    <div class="hidden md:flex items-center justify-between w-full px-6 absolute top-0 left-0 z-20">
        <div class="flex-1 flex space-x-8">
            {% if linklists.main-menu.links.size > 0 %}
            {% for link in linklists.main-menu.links %}
            <a class="font-normal text-white hover:underline underline-offset-4 decoration-1 block py-2 text-lg"
                href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
            {% endfor %}
            {% endif %}
        </div>

        <div class="flex-shrink-0 mx-auto">
            <a href="{{ shop.url }}" title="Homepage">
                {% if section.settings.image == blank %}
                <img class="w-[180px] h-[180px] md:w-[200px] md:h-[200px]" src="{{ 'logo.png' | asset_url }}"
                    alt="My company logo">
                {% else %}
                <img class="w-[180px] h-[180px] md:w-[200px] md:h-[200px]"
                    src="{{ section.settings.image | img_url: 'master' }}" alt="My company logo">
                {% endif %}
            </a>
        </div>

        <div class="flex-1 flex justify-end items-center space-x-8 text-white">
            <button
                x-on:click="searchBarButtonOpen = true; $nextTick(() => { document.body.style.overflow = 'hidden'; })"
                type="button" class="whitespace-nowrap text-base hover:text-gray-200" aria-label="Open search bar">
                {% render 'icon-search' %}
            </button>
            <a href="{{ routes.cart_url }}" class="cart-link relative">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                    stroke="white" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                </svg>
                {% if cart.item_count > 0 %}
                <p
                    class="absolute bottom-1.5 left-1 mt-2 ml-2 font-bold bg-red-900 text-white rounded-2xl px-2 py-0.5 text-xs">
                    {{ cart.item_count }}</p>
                {% endif %}
            </a>
        </div>
    </div>

    <!-- Hero Section -->
    <div class="relative w-full h-[500px] md:h-[700px]">
        <div class="absolute inset-0 bg-gradient-to-r from-[#feb82b] via-[#2387ff] to-[#e561a1] z-0"></div>
        <img src="{{ 'ariel_denim.jpg' | asset_url }}" class="object-cover w-full h-full relative z-0" alt="Hero Image">
        <div class="absolute inset-x-0 bottom-0 h-48 bg-gradient-to-t from-black/20 to-transparent z-10"></div>
        <div
            class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-20 flex flex-col items-center space-y-4">
            <h2 class="text-white text-2xl md:text-4xl font-bold text-center drop-shadow-[0_0_8px_black]">
                You had me at Polka Dots!
            </h2>
            <a href="https://arielcameronleather.com/collections/crossbody-collection"
                class="bg-white text-black px-6 py-2 rounded-md font-semibold hover:bg-gray-200 shadow-lg hover:scale-105 transition-transform duration-300">
                Shop Now
            </a>
        </div>
    </div>
</div>

{% schema %}
{
"name": "Navbar Hero",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Logo Image"
}
]
}
{% endschema %} {% endcomment %}