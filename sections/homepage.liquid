  text-shadow: -1px -1px 0 red, 1px -1px 0 red, -1px 1px 0 red, 1px 1px 0 red;
}

</style>

<!-- Header Gradient Section -->
<div class="flex flex-col justify-around items-center md:mt-28 md:flex-row max-w-screen-lg mx-auto">
  <!-- Color Boxes -->
  <div class="flex flex-col">
    <div class="bg-[#feb82b] py-4 w-96 mb-4 shadow-[0_4px_2px_-2px_#2280fa]">
      <h1 class="strokeme font-bold text-white text-center text-5xl">HANDCRAFTED</h1>
    </div>
    <div class="bg-[#feb82b] py-4 w-96 mb-4 shadow-[0_4px_2px_-2px_#2280fa]">
      <h1 class="strokeme font-bold text-white text-center text-5xl">HANDCRAFTED</h1>
    </div>
    <div class="bg-[#feb82b] py-4 w-96 mb-4 shadow-[0_4px_2px_-2px_#2280fa]">
      <h1 class="strokeme font-bold text-white text-center text-5xl">HANDCRAFTED</h1>
    </div>
  </div>
  <!-- Wallet Image -->
  <div>
    <img class="w-[150px] h-[150px] md:w-[400px] md:h-[400px]" src="{{ 'wallet-collection.png' |  asset_url }}" alt="walleet collection">
  </div>
