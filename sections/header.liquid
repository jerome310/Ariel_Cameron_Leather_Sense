<!-- Load alpine js -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs"></script>

<!-- Create a navbar slider with a hamburger icon -->
<div class="flex flex-col h-screen max-w-screen-lg mx-auto pt-5" x-data="{open: false}">
    <!-- Navbar -->
    <div class="flex items-center justify-between px-4 py-3">
        <!-- Hamburger icon -->
        <button class="text-gray-300 focus:outline-none md:hidden" x-on:click="open = !open">
            <svg class="h-6 w-6" x-show="!open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="h-6 w-6" x-show="open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <!-- Search icon -->
        <div class="text-gray-300 hidden md:block">
            {% render 'icon-search' %}
        </div>
        <!-- Logo -->
        <div class="text-gray-300 text-xl font-bold flex-1 text-center">{{ shop.name }}</div>
        <!-- Mobile Search icon -->
        <div class="text-gray-300 md:hidden pr-4">
            {% render 'icon-search' %}
        </div>
        <!-- Shopping icon -->
        <div class="text-gray-300">
            {% render 'icon-cart' %}
        </div>
    </div>
    <!-- Slider -->
    <div class="bg-gray-700 md:hidden" x-show="open" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="transform -translate-x-full" x-transition:enter-end="transform translate-x-0"
        x-transition:leave="transition ease-in duration-300" x-transition:leave-start="transform translate-x-0"
        x-transition:leave-end="transform -translate-x-full">
        <!-- Links -->
        <div class="flex flex-col px-4 py-2 space-y-2">
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Skin Care</a>
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Hair Care</a>
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Body Care</a>
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Nail Polish</a>
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Blog</a>
            <a href="#"
                class="text-gray-300 hover:bg-gray-800 hover:text-white block px-3 py-2 rounded-md text-base font-medium">About Us</a>
        </div>
        <!-- Social Media Icons -->
         <div class="flex px-6 pt-16 pb-6">
           {% render 'social-media-twitter' %}
           {% render 'social-media-facebook' %}
           {% render 'social-media-pinterest' %}
           {% render 'social-media-instagram' %}
           {% render 'social-media-tiktok' %}
         </div>
        <!-- Social Media Icons -->
    </div>
</div>