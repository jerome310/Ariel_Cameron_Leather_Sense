<!doctype html>
<html>

<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'application.css' | asset_url | stylesheet_tag }}
  {% comment %} {{ 'application.js' | asset_url | script_tag }} {% endcomment %}
  <script src="{{'application.js' |  asset_url }}" defer="defer"></script>
  <script src="//unpkg.com/alpinejs" defer></script>

                                                                                      
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Comic+Neue:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap');
  </style>

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="512x512" href="{{ 'favicon_512x512.png' | asset_url }}">
  <link rel="apple-touch-icon" sizes="512x512" href="{{ 'favicon_512x512.png' | asset_url }}">
  <link rel="icon" href="{{ 'favicon.ico' | file_url }}">
</head>

<body class="bg-[#FEB82B]/20 font-comic">

  {% section 'navbar-hero' %}

  <main role="main">
    {% unless template.name == 'index' %}
    {% if template.name == 'collection' or template.name contains 'product' %}
    <div class="pt-[250px] md:pt-[270px]"> <!-- More space for product pages -->
      {% elsif template.name == 'page.contact' %}
      <div class="pt-[130px] md:pt-[150px]"> <!-- Contact page spacing, 50px more -->
        {% else %}
        <div class="pt-[130px] md:pt-[150px]"> <!-- Other non-home pages -->
          {% endif %}
          {% endunless %}

          {{ content_for_layout }}

          {% unless template.name == 'index' %}
        </div>
        {% endunless %}
  </main>

  {% section 'footer' %}

  {{ 'shopify_payment_terms.js' | asset_url | script_tag }}
</body>



</html>